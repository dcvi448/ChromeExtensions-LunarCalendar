{
    "manifest_version": 3,
    "name": "Lunar Calendar - Âm lịch cho người Việt 2021",
    "version": "2021.08.15",
    "icons": {
      "16": "/img/icons/icon_16.png",
      "32": "/img/icons/icon_32.png",
      "48": "/img/icons/icon_48.png",
      "128": "/img/icons/icon_128.png"
    },
    "permissions": ["activeTab","tabs"],
    "action": {
      "default_icon": {
        "16": "/img/icons/icon_16.png",
        "32": "/img/icons/icon_32.png",
        "48": "/img/icons/icon_48.png",
        "128": "/img/icons/icon_128.png"
      },
      "default_popup": "popup.html"

    }
  }